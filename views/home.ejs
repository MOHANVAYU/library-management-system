<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="/icons/favicon.png" sizes="32x32">
    <title>Home Page</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" defer></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <a class="navbar-brand" href="/"><%= user==null ? 'Main Street Library  ' : user.toUpperCase()+' ' %><img src="/icons/logo.png" alt="logo" class="" style="width: 40px; height: 35px;"/></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/user/profile">Profile</a>
              </li>
              <% if ( user == null ) { %>
              <li class="nav-item">
                <a class="nav-link" href="/auth/login">Login</a>
              </li>
              <% } %>
              <% if (user != null ) { %>
              <li class="nav-item">
                <a class="nav-link" href="/user/logout">Logout</a>
              </li>
              <% } %>
              <li class="nav-item">
                <a href="/admin/root" class="nav-link">Admin</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <div class="container">
        <br>
        <h3>Books in Library</h3>
        <p>Here is a list of books in the library</p>
        <div class="container d-flex justify-content-center flex-wrap gap-2">
          <% data.forEach((item)=>{ %>
            <div class="card" style="width: 200px;">
              <img src="/img/<%=item.img%>" class="card-img-top" alt="Image">
              <div class="card-body">
                <h5 class="card-title"><%=item.title%></h5>
                <p class="card-text"><%=item.author%></p>
                <a href="/user/borrow/<%=item._id%>" class="btn <%=(item.status ? 'btn-primary' : 'btn-secondary') %>"><%=item.status ? 'Borrow' : 'On Loan'%></a>
              </div>
            </div>
            <% }) %>
      </div><br>
      <div class="container d-flex justify-content-center align-items-center mb-3">
        <a href="/auth/morebooks" class="btn btn-primary">More Books <img src="/icons/arrow-right.png" alt="logo" class="" style="width: 25px; height: 20px;"/></a>
      </div>
</body>
</html>